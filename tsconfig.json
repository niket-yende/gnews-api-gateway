{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true, 
		"typeRoots": [
			"./typings",
			"./node_modules/@types/"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}